<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSelectHandle">@drawable/empty_drop</item>
        <item name="android:textSelectHandleLeft">@drawable/empty_drop</item>
        <item name="android:textSelectHandleRight">@drawable/empty_drop</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TabLayoutThem" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_53</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <color name="white">#ffffff</color>

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:popupBackground">#FFFFFFFF</item>
    </style>

</resources>
