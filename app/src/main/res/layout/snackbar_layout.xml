<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/map_snackbar_house_image"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:layout_gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/snackbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/snackbar_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <com.helio.myreelty.common.custom_view.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="14.6dp"
        app:fontName="@string/roboto_regular"
        android:id="@+id/map_snackbar_house_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/snackbar_action"
        android:layout_alignBottom="@+id/snackbar_action"
        android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src = "@drawable/ic_dots_vertical"
            android:background="#00ffffff"
            android:layout_alignTop="@+id/map_snackbar_house_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:id="@+id/map_snackbar_menu_button"/>
    </RelativeLayout>

        <com.helio.myreelty.common.custom_view.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/map_snackbar_house_price"
            app:fontName="@string/roboto_medium"
            android:textColor="#89000000"
            android:textSize="12sp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>