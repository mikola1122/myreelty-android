<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/log_in__activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/log_in_back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:padding="4dp"
            android:src="@drawable/back" />

        <com.helio.myreelty.common.custom_view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontName = "@string/roboto_medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/login_activity"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/log_in_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>
</LinearLayout>